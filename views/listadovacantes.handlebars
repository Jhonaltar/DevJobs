<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">{{tagline}}</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form action="/buscador" method="post">
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="text" name="q" class="form-control form-control-lg"
                                placeholder="Escribir algun tema de trabajo...">
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">Buscar!</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-3 ">
                <a href="/vacantes/nueva" class="btn btn-block btn-lg btn-light">Publicar Nueva Vacante</a>
            </div>
        </div>
    </div>
</header>
<section class="section">
    <div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1 class="display-4">Lista de Todas las Vacantes</h1>
            <p class="lead">Aqui! podras Elejir tus vacantes y postularte</p>
        </div>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="filter-result mx-auto">
                    <p class="mb-30 ff-montserrat">Total encotrados : <span
                            class="btn btn-warning p-0px-tb p-10px-lr font-small border-radius-15">{{vacante.length}}</span>
                    </p>
                    {{#if vacante.length}}
                    {{#each vacante}}
                    <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                        <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                            <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                                DJ
                            </div>
                            <div class="job-content">
                                <h5 class="text-center text-md-left">{{titulo}}</h5>
                                <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                    <li class="mr-md-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                            <path
                                                d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                            <path
                                                d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                        </svg> {{ubicacion}}
                                    </li>
                                    <li class="mr-md-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-cash-stack" viewBox="0 0 16 16">
                                            <path
                                                d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                                            <path
                                                d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z" />
                                        </svg> {{salario}}
                                    </li>
                                    <li class="mr-md-4">
                                        <span
                                            class="btn btn-primary p-0px-tb p-10px-lr font-small border-radius-15 color"
                                            id="color" value="">{{contrato}}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="job-right my-4 flex-shrink-0">
                            <a href="/vacantes/{{url}}" class="btn d-block w-100 d-sm-inline-block btn-light">Mas informacion</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{else}}
            <div class="alert alert-info mx-auto" role="alert">
                <h6 class="border-bottom pb-2 mb-0"><strong>No hay vacantes</strong></h6>
            </div><!-- Job Card -->
            {{/if}}
        </div>
    </div>
</section>
<br><br>

{{>footer}}