<section class="section">
    <div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1 class="display-4">Lista de Vacantes</h1>
            <p class="lead">Aqui! podras Elejir tus vacantes y postularte</p>
        </div>
        <div class="row">
            {{#if vacantes.length}}
            {{#each vacantes}}
            <div class="col-sm-6 col-lg-4 m-15px-tb truncate">
                <div class="media box-shadow-only-hover hover-top border-all-1 border-color-gray p-15px">
                    <a class="overlay-link" href="/vacantes/{{url}}"></a>
                    <div class="icon-50 theme-bg white-color border-radius-50 d-inline-block">
                        <i class="number">DJ</i>
                    </div>
                    <div class="p-20px-l media-body ">
                        <span class="btn btn-primary p-0px-tb p-10px-lr font-small border-radius-15 color" id="color"
                            value="">{{contrato}}</span>
                        <h6 class="m-5px-tb" style="font-weight: normal!important;"><strong>Empresa:</strong>
                            {{empresa}}</h6>
                        <h6 class="m-5px-tb" style="font-weight: normal!important;"><strong>Puesto:</strong> {{titulo}}
                        </h6>
                        <ul class="tr-list job-meta">
                            <li><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path
                                        d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg> {{ubicacion}}</li>
                            <li><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-cash-stack" viewBox="0 0 16 16">
                                    <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                                    <path
                                        d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z" />
                                </svg> ${{salario}}</li>
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="col-12 p-25px-t text-center">
                <a href="/listvacantes" type="button" class="btn btn-outline-dark">Visualizar mas puesto de trabajos...</a>
            </div>
            {{else}}
            <div class="alert alert-info mx-auto" role="alert">
                <h6 class="border-bottom pb-2 mb-0"><strong>No hay vacantes</strong></h6>
            </div><!-- Job Card -->
            {{/if}}
        </div>
    </div>
</section>
